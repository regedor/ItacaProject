<h1>Nov<%= (["foto"].include? resource_singular.humanize.downcase) ? "a" : "o" %> <%= resource_singular.humanize.downcase %></h1>

<% form_for current_member, :html => { :multipart => true } do |f| %>
<%= render :partial => 'form', :locals => { :f => f } %>

<p class="form-actions">
  <%= submit_tag "Criar #{resource_singular.humanize.downcase}" %> <span>ou</span>
  <%= link_to 'cancelar', collection_path, :title => "Voltar para lista de #{resource_plural.humanize.downcase}" %>
</p>

<% end %>
