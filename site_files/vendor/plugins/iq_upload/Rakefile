require 'rake'
require 'rake/testtask'
require 'rake/rdoctask'
require 'rcov/rcovtask'

desc 'Default: run unit tests.'
task :default => [:test, :functional_test]

desc 'Test the upload plugin.'
Rake::TestTask.new(:test) do |t|
  t.libs << 'lib'
  t.pattern = 'test/**/*_test.rb'
  t.verbose = true
end

desc 'Functional test the upload plugin.'
Rake::TestTask.new(:functional_test) do |t|
  t.libs << 'lib'
  t.pattern = 'test/iq/upload/functional_tests.rb'
  t.verbose = true
end

desc 'Generate documentation for the IQ::Upload plugin.'
Rake::RDocTask.new(:rdoc) do |rdoc|
  rdoc.rdoc_dir = 'rdoc'
  rdoc.title    = 'IQ::Upload'
  rdoc.options << '--line-numbers' << '--inline-source'
  rdoc.rdoc_files.include('README')
  rdoc.rdoc_files.include('lib/**/*.rb')
end

desc 'Output test coverage of the IQ::Upload plugin.'
Rcov::RcovTask.new(:rcov) do |rcov|
  rcov.pattern    = 'test/**/*_test.rb'
  rcov.output_dir = 'rcov'
  rcov.verbose    = true
end