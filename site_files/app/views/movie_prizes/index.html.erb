<h1>Listing movie_prizes</h1>

<table>
  <tr>
    <th>Movie</th>
    <th>Prize</th>
    <th>Description</th>
  </tr>

<% for movie_prize in @movie_prizes %>
  <tr>
    <td><%=h movie_prize.movie_id %></td>
    <td><%=h movie_prize.prize_id %></td>
    <td><%=h movie_prize.description %></td>
    <td><%= link_to 'Show', movie_prize %></td>
    <td><%= link_to 'Edit', edit_movie_prize_path(movie_prize) %></td>
    <td><%= link_to 'Destroy', movie_prize, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

