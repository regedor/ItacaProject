<% content_for :page_title, truncate(@writen_document.title,46,"...") %>
<% content_for :body_id,    "show-writen_document" %>

<div id='generic-info'>
  <div id='item-visuals'>
    <div id='item-presenter'>
    </div>
    <div id='related-photos'>
      <% @writen_document.photos.each do | photo | %>
        <%= link_to image_tag(photo.versions[:preview].relative_path), photo_path(photo), :title => "" %>
      <% end %>
    </div>
  </div>

  <div id= 'fields'>
    <%= render_field(@writen_document,'title')%>
    <%= render_related (@writen_document.authors.size > 1 ? 'authors' : 'author'), (@writen_document.authors.map do | item | 
          { :title => item.name, :path => author_path(item) } 
    end) %> 
    <%= render_field_div "Género", @writen_document.document_type.name if @writen_document.document_type%>
    <%= render_field_div "Temática", render_category_and_subs(@writen_document) %>
    <%= render_field(@writen_document,'synopsis')%>
  </div>
</div>


<div id='related-info'>
  <h3>Relacionado com este documento escrito</h3>
  <%= render_related 'locals', (@writen_document.locals.map do | item | 
        { :title => item.name, :path => local_path(item), :description => "" } 
      end) %> 
  <%= render_related 'prizes', (@writen_document.prizes.map do | item | 
        { :title => item.title, :path => prize_path(item), :description => item.description_for(@writen_document) } 
      end) %> 
  <%= render_related 'movies', (@writen_document.movies.map do | item | 
        { :title => item.title, :path => movie_path(item), :description => "" } 
      end) %> 
  <%= render_related 'sound_documents', (@writen_document.sound_documents.map  do | item | 
        { :title => item.title, :path => sound_document_path(item), :description => "" } 
      end) %> 
  <%= render_related 'writen_documents', (@writen_document.writen_documents.map do | item | 
        { :title => item.title, :path => writen_document_path(item), :description => "" } 
      end) %> 
</div>	


