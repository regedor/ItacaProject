<%= f.error_messages %>
<%= f.persist_fields %>

<dl>
  <%= field_selector f, "document_type"                     %>
  <%= authors_field_selector_with_js f, current_member      %>
  <% f.columns.each do |column| -%>
    <%= f.render column unless ['updated_at',
                                'created_at', 
                                'version_name', 
                                'content_type', 
                                'file_size', 
                                'photo_owner_type'].include? column.name %>
  <% end -%>
  <%= field_selector f, "category"                          %>
  <%= field_selector f, "subcategory_1_id",  Subcategory    %>
  <%= field_selector f, "subcategory_2_id",  Subcategory    %>
  <%= field_selector f, "subcategory_3_id",  Subcategory    %>
  <%= field_selector f, "subcategory_4_id",  Subcategory    %>
</dl>

<%= associate_nn_selector current_member, 'writen_document', 'movie',           'title', [], :mode => :invert %>
<%= associate_nn_selector current_member, 'writen_document', 'sound_document',  'title', [], :mode => :invert %>
<%= associate_nn_selector current_member, 'writen_document', 'writen_document', 'title', [], :mode => :itself %>
<%= associate_nn_selector current_member, 'writen_document', 'photo',           'title', [], :mode => :normal %>
<%= associate_nn_selector current_member, 'writen_document', 'local',           'name',  [], :mode => :normal %>
<%= associate_nn_selector current_member, 'writen_document', 'prize',           'title', [], :mode => :normal %>

<h3>Associar PDF</h3>
<%= uploadify_file_field :writen_document, :pdf_uploaded_data %> <%= current_member.filename%>
