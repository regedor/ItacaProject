<% content_for :page_title do %>Lista de Autores<% end %>


<div id=movies-index-list class=resource-list>
  <table>

    <tr>
      <th></th>
      <th><%=h "Name".humanize %>          </th>
      <th><%=h "Biography".humanize %>         </th>
    </tr>
  
    <% for resource in @authors %>
    <tr <%= cycle "", "class='odd'"%>  href="<%= author_path(resource)%>" >
      <td class="resource-pic">  </td>
      <td><%= link_to truncate(resource.name,80,"..."), author_path(resource) %></td>
      <td><%=h truncate(resource.biography,80,"...") %></td>
    </tr>
    <% end %>

  </table>
</div>


